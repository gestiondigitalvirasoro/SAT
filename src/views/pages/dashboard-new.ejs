<script>
    let chartInitialized = false;
    let myChart = null;

    // Funci√≥n para cambiar tabs
    function showTab(tabName) {
        // Ocultar todos los tabs
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.remove('active');
        });
        
        // Remover clase active de todos los botones
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        
        // Mostrar el tab seleccionado
        const selectedTab = document.getElementById(tabName + '-tab');
        if (selectedTab) {
            selectedTab.classList.add('active');
        }
        
        // Activar el bot√≥n correspondiente
        if (event && event.target) {
            event.target.classList.add('active');
        }
        
        // Cerrar dropdown si est√° abierto
        const dropdown = document.querySelector('.tab-dropdown-menu');
        if (dropdown) {
            dropdown.classList.remove('active');
        }
    }
    
    // Funci√≥n para toggle del dropdown de Reportes
    function toggleTabDropdown(event) {
        event.stopPropagation();
        const dropdown = event.target.nextElementSibling;
        dropdown.classList.toggle('active');
    }

    // Cerrar dropdown al hacer click en cualquier parte del documento
    document.addEventListener('click', function() {
        const dropdowns = document.querySelectorAll('.tab-dropdown-menu.active');
        dropdowns.forEach(dropdown => {
            dropdown.classList.remove('active');
        });
    });

    // Inicializar gr√°fico
    function initChart() {
        if (chartInitialized) return;
        chartInitialized = true;
        
        const canvasElement = document.getElementById('visitasChart');
        if (!canvasElement) {
            console.log('Canvas no encontrado');
            return;
        }
        
        try {
            const ctx = canvasElement.getContext('2d');
            myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Sep', 'Oct', 'Nov', 'Dic'],
                    datasets: [{
                        label: 'Visitas',
                        data: [7, 6, 4, 10],
                        backgroundColor: '#4A90E2',
                        borderColor: '#4A90E2',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: false,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 12,
                            ticks: {
                                stepSize: 2
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        } catch(e) {
            console.error('Error al inicializar gr√°fico:', e);
        }
    }

    // Esperar a que el DOM est√© listo
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initChart);
    } else {
        initChart();
    }

    // Manejador de acciones
    function handleAction(action) {
        switch(action) {
            case 'nueva-visita':
                window.location.href = '/nueva-visita';
                break;
            case 'visita-servicios':
                alert('Visita de Servicios - Pr√≥ximamente');
                break;
            case 'generar-reporte':
                window.location.href = '/reports/planes-accion';
                break;
            case 'nueva-empresa':
                window.location.href = '/nueva-empresa';
                break;
        }
    }

</script>