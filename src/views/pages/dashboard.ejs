<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', { title: 'Dashboard - Potencia Activa' }) %>
<body>
    <%- include('../partials/navbar-dashboard') %>
    <%- include('../partials/dashboard-nav-tabs') %>
    
    <div class="dashboard-container" style="margin-top: 20px;">
        <style>
            .dashboard-container {
                padding: 20px;
                max-width: 1400px;
                margin: 0 auto;
                background: #f5f5f5;
                min-height: 100vh;
            }

            .dashboard-grid {
                display: grid;
                grid-template-columns: 2fr 1fr;
                gap: 30px;
                margin-bottom: 30px;
            }

            .chart-card {
                background: white;
                padding: 30px;
                border-radius: 12px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            }

            .chart-card h2 {
                margin: 0 0 10px 0;
                font-size: 1.5rem;
                color: #333;
            }

            .chart-subtitle {
                color: #666;
                font-size: 0.9rem;
                margin-bottom: 20px;
            }

            .actions-card {
                background: white;
                padding: 30px;
                border-radius: 12px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            }

            .actions-card h2 {
                margin: 0 0 20px 0;
                font-size: 1.5rem;
                color: #333;
            }

            .action-item {
                display: flex;
                align-items: center;
                gap: 15px;
                padding: 15px;
                margin-bottom: 15px;
                background: #f9f9f9;
                border-radius: 8px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .action-item:hover {
                background: #fffbf0;
                border-left: 4px solid #FF6B35;
                padding-left: 20px;
            }

            .action-icon {
                font-size: 1.5rem;
                min-width: 30px;
            }

            .action-text h3 {
                margin: 0;
                font-size: 1rem;
                color: #333;
            }

            .action-text p {
                margin: 5px 0 0 0;
                font-size: 0.85rem;
                color: #666;
            }

            .action-btn {
                background: none;
                border: none;
                color: #FF6B35;
                font-size: 1.2rem;
                cursor: pointer;
                padding: 5px;
                margin-left: auto;
            }

            .action-btn:hover {
                transform: scale(1.2);
            }

            @media (max-width: 1024px) {
                .dashboard-grid {
                    grid-template-columns: 1fr;
                }
            }

            @media (max-width: 768px) {
                .dashboard-container {
                    padding: 10px;
                }

                .chart-card,
                .actions-card {
                    padding: 15px;
                }

                .chart-card h2,
                .actions-card h2 {
                    font-size: 1.2rem;
                }
            }
        </style>

        <div class="dashboard-grid">
            <!-- Gr√°fico de Visitas -->
            <div class="chart-card">
                <h2>Visitas</h2>
                <p class="chart-subtitle">√öltimos 4 meses</p>
                <canvas id="visitsChart" height="80"></canvas>
            </div>

            <!-- Panel de Acciones -->
            <div class="actions-card">
                <h2>Acciones</h2>
                
                <div class="action-item" onclick="handleAction('nueva-visita')">
                    <div class="action-icon">üìù</div>
                    <div class="action-text">
                        <h3>Nueva Visita</h3>
                        <p>Registrar nueva visita</p>
                    </div>
                    <button class="action-btn">+</button>
                </div>

                <div class="action-item" onclick="handleAction('visita-servicios')">
                    <div class="action-icon">üîß</div>
                    <div class="action-text">
                        <h3>Visita de Servicios</h3>
                        <p>Registrar servicio</p>
                    </div>
                    <button class="action-btn">+</button>
                </div>

                <div class="action-item" onclick="handleAction('generar-reporte')">
                    <div class="action-icon">üìä</div>
                    <div class="action-text">
                        <h3>Generar Reporte</h3>
                        <p>Crear nuevo reporte</p>
                    </div>
                    <button class="action-btn">+</button>
                </div>

                <div class="action-item" onclick="handleAction('nueva-empresa')">
                    <div class="action-icon">üè¢</div>
                    <div class="action-text">
                        <h3>Nueva Empresa</h3>
                        <p>Agregar empresa</p>
                    </div>
                    <button class="action-btn">+</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Datos de ejemplo para el gr√°fico
        const chartData = {
            labels: ['Sep', 'Oct', 'Nov', 'Dic'],
            data: [7, 6, 4, 10]
        };

        // Inicializar gr√°fico
        const ctx = document.getElementById('visitsChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Visitas',
                    data: chartData.data,
                    backgroundColor: '#4A90E2',
                    borderColor: '#4A90E2',
                    borderWidth: 1,
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 12,
                        ticks: {
                            stepSize: 2
                        }
                    }
                }
            }
        });

        // Manejador de acciones
        function handleAction(action) {
            switch(action) {
                case 'nueva-visita':
                    window.location.href = '/nueva-visita';
                    break;
                case 'visita-servicios':
                    alert('Visita de Servicios - Pr√≥ximamente');
                    break;
                case 'generar-reporte':
                    window.location.href = '/reports/planes-accion';
                    break;
                case 'nueva-empresa':
                    window.location.href = '/nueva-empresa';
                    break;
            }
        }
    </script>

    <%- include('../partials/footer') %>
</body>
</html>