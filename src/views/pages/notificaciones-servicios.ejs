            }
        ];

        async function cargarEmpresas() {
            try {
                const response = await fetch('/api/empresas');
                let empresas = [];
                if (response.ok) {
                    empresas = await response.json();
                }
                
                const select = document.getElementById('empresa');
                empresas.forEach(emp => {
                    const option = document.createElement('option');
                    option.value = emp.id || emp.nombre;
                    option.textContent = emp.nombre;
                    select.appendChild(option);
                });
            } catch (error) {
                console.log('Error cargando empresas', error);
            }
        }

        async function buscarNotificaciones() {
            const empresaId = document.getElementById('empresa').value;
            const anio = document.getElementById('anio').value;

            try {
                const params = new URLSearchParams();
                if (empresaId) params.append('empresa', empresaId);
                if (anio) params.append('anio', anio);

                const response = await fetch(`/api/notificaciones-servicios?${params}`);
                let notificaciones = [];
                if (response.ok) {
                    notificaciones = await response.json();
                }
                
                if (!notificaciones || notificaciones.length === 0) {
                    notificaciones = DEMO_NOTIFICACIONES;
                }

                generarTabla(notificaciones);
            } catch (error) {
                console.log('Error buscando notificaciones (usando demo)', error);
                generarTabla(DEMO_NOTIFICACIONES);
            }
        }

        function generarTabla(notificaciones) {
            const tbody = document.getElementById('tabla-body');
            tbody.innerHTML = '';

            if (!notificaciones || notificaciones.length === 0) {
                tbody.innerHTML = '<tr><td colspan="10" class="empty-message">No hay notificaciones para mostrar</td></tr>';
                return;
            }

            notificaciones.forEach(notif => {
                const row = document.createElement('tr');
                
                const estadoBadgeClass = notif.estado === 'vencido' ? 'badge-vencido' : 
                                        notif.estado === 'completado' ? 'badge-completado' : 'badge-pendiente';
                
                const estadoText = notif.estado === 'vencido' ? 'VENCIDO' : 
                                   notif.estado === 'completado' ? 'COMPLETADO' : 'PENDIENTE';

                row.innerHTML = `
                    <td>${notif.cliente || ''}</td>
                    <td>${notif.locacion || ''}</td>
                    <td>${notif.servicio || ''}</td>
                    <td>${notif.periodo || ''}</td>
                    <td style="text-align: center;">
                        ${notif.cumplido ? `<span class="checkmark">✓</span>` : ''}
                    </td>
                    <td>${notif.vence || ''}</td>
                    <td>${notif.aviso || ''}</td>
                    <td>${notif.enviado || ''}</td>
                    <td><code>${notif.referencia || ''}</code></td>
                    <td>
                        <span class="badge ${estadoBadgeClass}">
                            ${estadoText}
                        </span>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Cargar al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            cargarEmpresas();
            buscarNotificaciones();
        });

        // Enter para buscar
        document.getElementById('anio').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') buscarNotificaciones();
        });
    </script>

