<!DOCTYPE html>
<html lang="es">
<body>
    
    <div class="form-container" style="margin-top: 100px; padding: 40px 20px;">
        <div class="form-card">
            <h1>Nueva Visita</h1>
            <form id="formNuevaVisita" onsubmit="guardarVisita(event)">
                <div class="form-group">
                    <label for="empresa">Empresa *</label>
                    <select id="empresa" name="empresa" required>
                        <option value="">-- Seleccionar empresa --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="locacion">Locación *</label>
                    <select id="locacion" name="locacion" required>
                        <option value="">-- Seleccionar locación --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="formulario">Tipo de Formulario *</label>
                    <select id="formulario" name="formulario" required>
                        <option value="">-- Seleccionar tipo --</option>
                        <option value="GE">Gestión Empresaria (GE)</option>
                        <option value="RU">Relevamiento de Riesgos Unitario (RU)</option>
                        <option value="ER">Evaluación de Riesgos (ER)</option>
                        <option value="RO">Relevamiento Organizacional (RO)</option>
                        <option value="IL">Inspección Laboral (IL)</option>
                        <option value="TI">Talleres de Inducción (TI)</option>
                        <option value="EX">Exámenes Médicos (EX)</option>
                        <option value="VL">Vigilancia Laboral (VL)</option>
                        <option value="PP">Programa de Prevención (PP)</option>
                        <option value="OTROS">Otros</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="fecha">Fecha *</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>

                <div class="form-group">
                    <label for="observaciones">Observaciones</label>
                    <textarea id="observaciones" name="observaciones" rows="4" placeholder="Notas sobre la visita..."></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Guardar Visita</button>
                    <a href="/dashboard" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <style>
        .form-container {
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .form-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .form-card h1 {
            margin-top: 0;
            color: #333;
            font-size: 1.8rem;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            font-family: inherit;
            box-sizing: border-box;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #FF6B35;
            box-shadow: 0 0 5px rgba(255, 107, 53, 0.3);
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #FF6B35;
            color: white;
            flex: 1;
        }

        .btn-primary:hover {
            background: #E55A25;
        }

        .btn-secondary {
            background: #f0f0f0;
            color: #333;
            flex: 1;
        }

        .btn-secondary:hover {
            background: #e0e0e0;
        }

        @media (max-width: 600px) {
            .form-container {
                padding: 20px 10px;
            }

            .form-card {
                padding: 20px;
            }

            .form-actions {
                flex-direction: column;
            }
        }
    </style>

    <script>
        async function cargarEmpresas() {
            try {
                const response = await fetch('/api/empresas');
                if (response.ok) {
                    const empresas = await response.json();
                    const select = document.getElementById('empresa');
                    empresas.forEach(emp => {
                        const option = document.createElement('option');
                        option.value = emp.id || emp.nombre;
                        option.textContent = emp.nombre;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.log('Error cargando empresas', error);
            }
        }

        async function cargarLocaciones(empresaId) {
            try {
                const response = await fetch(`/api/locaciones?empresa=${empresaId}`);
                if (response.ok) {
                    const locaciones = await response.json();
                    const select = document.getElementById('locacion');
                    select.innerHTML = '<option value="">-- Seleccionar locación --</option>';
                    locaciones.forEach(loc => {
                        const option = document.createElement('option');
                        option.value = loc.id || loc.nombre;
                        option.textContent = loc.nombre;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.log('Error cargando locaciones', error);
            }
        }

        async function guardarVisita(event) {
            event.preventDefault();

            const visita = {
                empresa_id: document.getElementById('empresa').value,
                locacion_id: document.getElementById('locacion').value,
                tipo_formulario: document.getElementById('formulario').value,
                fecha: document.getElementById('fecha').value,
                observaciones: document.getElementById('observaciones').value
            };

            try {
                const response = await fetch('/api/visitas', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(visita)
                });

                if (response.ok) {
                    alert('✅ Visita guardada correctamente');
                    window.location.href = '/dashboard';
                } else {
                    alert('❌ Error al guardar la visita');
                }
            } catch (error) {
                console.log('Error guardando visita', error);
                alert('❌ Error al guardar la visita');
            }
        }

        // Cargar empresas al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            cargarEmpresas();
            
            // Cargar locaciones cuando cambia empresa
            document.getElementById('empresa').addEventListener('change', function() {
                if (this.value) {
                    cargarLocaciones(this.value);
                }
            });

            // Set fecha actual
            const hoy = new Date().toISOString().split('T')[0];
            document.getElementById('fecha').value = hoy;
        });
    </script>
</body>
</html>
